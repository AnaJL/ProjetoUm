from Node import No
from Cdados import Dadu
import time

class Pilha:
    def __init__ ( self, topo = No()):
        self._topo = topo
    def isEmpty(self):
        if self._topo.get_dado() == None:
            print("True")
        else:
            print("False")
    def add(self, elem):
        elem = No(elem)
        elem.set_proximo(self._topo)
        self._topo = elem
    def remove(self):
        p = self._topo
        if self.sizep() != 1:
            self._topo = self._topo.get_proximo()
        else:
            self._topo.set_dado(None)
            p.set_dado(None)
    def sizep(self):
        p = self._topo
        count = 0
        p = self._topo
        if p.get_dado() != None:
             while p.get_proximo() != None:
              count+=1
              p = p.get_proximo()
             return count
        else:
            return count
    def showtopo(self):
        p = self._topo
        if p.get_dado() != None:
            return self._topo.get_dado().get_dado().get_filmeeano()
        else:
            return 'Vazio'

